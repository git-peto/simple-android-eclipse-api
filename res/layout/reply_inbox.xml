<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isi Pesan:"
        />
    
    <TextView 
        android:id="@+id/tv_content_inbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:text=""
        />
    
    <TextView 
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content_inbox"
        android:text="Balasan:"
        />
    
    <EditText 
    	android:id="@+id/etpesanreply"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/tv2"
    	android:hint="Tulis pesan balasan disini"    
        />
    
    <Button 
        android:id="@+id/btnkirimreply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etpesanreply"
        android:text="KIRIM BALASAN"
        />

</RelativeLayout>
